<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharactersActivity">

    <ImageView
        android:id="@+id/CharacterActivityImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/backgroundcolor"
        app:layout_constraintBottom_toTopOf="@+id/CaracterActivityLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CharacterActivityCircleÄ°mageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/loading"
        app:cardCornerRadius="50dp"
        app:civ_border_color="@color/rickandmortyColor1"
        app:civ_border_width="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout
        android:id="@+id/CaracterActivityLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/backgroundcolor"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CharacterActivityImageView">

        <TextView
            android:id="@+id/textViewCharactersName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textColor="@color/rickandmortyColor"
            android:textSize="25sp">

        </TextView>

        <TextView
            android:id="@+id/textViewCharactersStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/rickandmortyColor"
            android:textSize="25sp">

        </TextView>

        <TextView
            android:id="@+id/textViewCharactersSpecies"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Loading"
            android:textColor="@color/rickandmortyColor"
            android:textSize="25sp">

        </TextView>

        <TextView
            android:id="@+id/textViewCharactersGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/rickandmortyColor"
            android:textSize="25sp">

        </TextView>

        <TextView
            android:id="@+id/textViewCharactersLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/rickandmortyColor"
            android:textSize="25sp">

        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

